#include<stdio.h>
int main()
{
    int n,i;
    printf("The array elsement: ");
    scanf("%d",&n);
    int a[n];
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("Enter the number to be added: ");
    int m;
    int b[n+1];
    scanf("%d",&m);
    //Placing it at even array loacation
    b[0]=m;
    for(i=0;i<n+1;i++)
    {
        b[i+1]=a[i];
    }
    printf("The new array is\n");
    for(i=0;i<n+1;i++)
    {
        printf("%d\t",b[i]);
    }
}
